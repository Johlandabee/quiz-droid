<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".Activity.MainMenu">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quiz_mode_singleplayer"
        android:id="@+id/btn_singleplayer"
        android:onClick="DEBUG_onClickMethod"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debug: Settings"
        android:id="@+id/button"
        android:onClick="DEBUG_onClickSettings"

        android:layout_below="@id/btn_singleplayer"/>

</RelativeLayout>
