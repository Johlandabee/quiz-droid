<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="de.thenutheads.jlndbe.quizdroid.Activity.Results">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/debug_default_text"
        android:id="@+id/out_player_name"

        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/label_player_name"
        android:layout_alignBaseline="@+id/label_player_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/debug_default_text"
        android:id="@+id/out_score"

        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/label_score"
        android:layout_alignBaseline="@+id/label_score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/debug_default_text"
        android:id="@+id/out_correct_answers"

        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/label_correct_answers"
        android:layout_alignBaseline="@+id/label_correct_answers"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/debug_default_text"
        android:id="@+id/out_category"

        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/label_category"
        android:layout_alignBaseline="@+id/label_category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/debug_default_text"
        android:id="@+id/out_difficulty"

        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/label_difficulty"
        android:layout_alignBaseline="@+id/label_difficulty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_results_name"
        android:id="@+id/label_player_name"
        android:labelFor="@id/out_player_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_results_score"
        android:id="@+id/label_score"
        android:labelFor="@id/out_score"

        android:layout_below="@+id/label_player_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_results_correct_answers"
        android:id="@+id/label_correct_answers"

        android:labelFor="@id/out_correct_answers"
        android:layout_below="@+id/label_score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_results_category"
        android:id="@+id/label_category"
        android:labelFor="@id/out_player_name"

        android:layout_below="@+id/label_correct_answers"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_results_difficulty"
        android:id="@+id/label_difficulty"

        android:layout_below="@id/label_category"
        />


    // Score

    // Correct Answers

    // Category

    // Difficulty

    // Ok Button

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_Ok"
        android:id="@+id/btn_ok"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="onClickOk"

        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>
